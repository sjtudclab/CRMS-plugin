<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="componentlibrary.actionSet">
         <menu
               label="Repository"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               class="component.actions.PushAction"
               id="componentlibrary.action.Push"
               label="&amp;Push"
               menubarPath="sampleMenu/sampleGroup">
         </action>
         <action
               class="component.actions.DownloadAction"
               id="componentlibrary.actions.Download"
               label="&amp;Developing Project"
               menubarPath="sampleMenu/sampleGroup">
         </action>
         <action
               class="component.actions.ConfigurationAction"
               icon="icons/sample.gif"
               id="componentlibrary.actions.Configuration"
               label="&amp;Configuration"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Library Configuration">
         </action>
      </actionSet>
   </extension>

</plugin>

